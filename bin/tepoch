#!/usr/bin/env ruby

require 'tepoch'
require 'optparse'

options = { :utc => true, :keep_as_timestamp => false }
OptionParser.new do |opts|
  opts.banner = "Usage: tepoch [options"
  
  opts.on("--local", "Convert to local time") do |v|
    options[:utc] = false
  end

  opts.on("--timestamp", "Keep as timestamp") do |v|
    options[:keep_as_timestamp] = true
  end
end.parse!

command = Tepoch::Interface.new(ARGV)

if command.clock?
  clock_thread = Thread.new do
    loop do
      print Tepoch::Interface.perform(ARGV, options)
    end
  end

  str = STDIN.gets
  clock_thread.kill
else
  puts Tepoch::Interface.perform(ARGV, options)
end
